@if (tournamentTeamDTO is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <AddTeamForm @ref="addTeamForm" 
                         TournamentTeamDTO="tournamentTeamDTO" 
                         OnValidSubmit="AddAsync" 
                         ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}